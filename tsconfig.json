{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "pretty": true,
        "moduleResolution": "node",
        "outDir": "src_js",
        "target": "es6",
        "strict": true,
        "removeComments": true,
        "lib": [
            "es7",
            "es2015"
        ],
        "types": [
            "@types/node",
            "@types/mocha",
            "@types/chai"
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}